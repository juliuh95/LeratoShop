@model IEnumerable<LeratoShop.Data.Entities.Platform>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CategoriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Platforms", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Plataforma')" class="btn btn-sm btn-secondary text-white"><i class="fa fa-plus-circle"></i> Nueva Plataforma</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <span asp-action="Details" asp-controller="Platforms" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</span>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Platforms", new { id=item.Id }, Context.Request.Scheme)' , 'Actualizar Plataforma')" class="btn btn-sm btn-dark"><i class="fa fa-pencil-alt"></i> Editar</a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i> Eliminar</button>
            </td>
        </tr>
        }
    </tbody>
</table>