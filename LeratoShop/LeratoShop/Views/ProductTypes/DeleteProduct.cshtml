@model LeratoShop.Data.Entities.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seeguro de querer borrar?</h3>
<div>
    <partial name="_ProductDeleteDetails"/>    
    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model?.ProductType.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
