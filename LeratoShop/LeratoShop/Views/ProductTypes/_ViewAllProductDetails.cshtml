@model LeratoShop.Data.Entities.Product

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont" id="StatesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductDetails.FirstOrDefault().Color)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddProductDetails", "ProductTypes", new { id = Model.Id }, Context.Request.Scheme)' , 'Nuevo producto detalle')" class="btn btn-sm btn-secondary text-white"><i class="fa fa-plus-circle"></i> Producto Detalle</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductDetails)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("EditProductDetails", "ProductTypes", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Detalle Producto')" class="btn btn-sm btn-dark"><i class="fa fa-pencil-alt"></i> Editar</a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i> Eliminar</button>
            </td>
        </tr>
        }
    </tbody>
</table>
